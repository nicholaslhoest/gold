---
// Default layout to wrap content with reusable structure

import Footer from "../components/Footer.astro";
const { title, author, date, tags, children } = Astro.props;
---
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title> {title} </title>
</head>
    <body>
        <article>
            <header>
                <h1>{title}</h1>
                <strong>Date: {date}</strong>
                <p>Tags: {tags.join(", ")}</p>
            </header>
            <main>
                <slot/>
            </main>
        </article>
    </body>
<Footer />
</html>
