---
import MusicPlayer from "./MusicPlayer.astro";---
<div class="hero min-h-[100svh]">
    <script>
        import gsap from "gsap";

        gsap.from(".hero", {
            y: 400,
            opacity: 0,
            duration: 0.75,
            ease: "power3.out"
        });
    </script>
    <div class="hero min-h-[100svh]">
        <div class="card bg-base-100 w-96 shadow-sm overflow-visible">

            <figure class="h-56 overflow-hidden">
                <img
                        src="/blackhole.jpg"
                        alt="blackhole"
                        class="w-full h-full object-cover" />
            </figure>

            <div class="flex -mt-20">
                <div class="avatar">
                    <div class="w-40 rounded-full
                    bg-base-100 p-2
                    ml-5">
                        <img
                                class="rounded-full"
                                src="/stick-head-wizard.png"
                                alt="Stick Wizard" />
                    </div>
                </div>
            </div>

            <div class="card-body">


                <h1 class="text-3xl font-bold">N. B. Lhoest</h1>
                <p class="text-yellow-600 font-bold opacity-70"> Gamer. Coder. Designer. </p>

                <div class="flex justify-start">
                    <MusicPlayer/>
                    <button
                            class="btn btn-outline btn-default ml-2"
                            type="button"
                            onclick="
                                navigator.clipboard.writeText('mail@lhoest.net');
                                const btn = this;
                                const original = btn.innerText;
                                btn.innerText = 'Email Copied!';
                                btn.classList.add('btn-success');
                                setTimeout(() => {
                                  btn.innerText = original;
                                  btn.classList.remove('btn-success');
                                }, 1500);
  "
                        >
                        Email
                    </button>
                </div>

            </div>
        </div>
    </div>
</div>
